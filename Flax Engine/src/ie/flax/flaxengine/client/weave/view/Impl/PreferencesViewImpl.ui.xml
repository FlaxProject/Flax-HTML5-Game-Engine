<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel spacing="5">
			<g:CheckBox text="Autosave to local storage" ui:field="autosave"/>
			<g:Button ui:field="clearMaps">Clear maps from local storage</g:Button>
			<g:Button ui:field="clearAll">Clear everything from local storage</g:Button>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 