<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.splashScreen {
			font-weight: bold;
			width:100%;
			height: 100%;
			background-color:#F3F1E5;
			background-image: url("http://flax.ie/images/flaxLogo.png");
			background-repeat: no-repeat;
			background-position: center;
		}
		
		
		.splashScreenText {
			position:absolute;
			top:60%;
			left:40%;
			width:20%;
			text-align:center;
			font-size:2em;
			height: 100%;

			
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.splashScreen}">
		<g:Label styleName="{style.splashScreenText}">	
	Version 0.1 - Loading...		
	
		</g:Label>
	</g:HTMLPanel>
</ui:UiBinder> 
